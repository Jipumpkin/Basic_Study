package person;

public class Main {

	public static void main(String[] args) {
		// 설계도를 사용하는것
		// 설계도의 이름 레퍼런스형 변수명 = new 설계도의 이름();
		Person p1 = new Person();
		// new - 새로운 주소값을 가지는 동적 메모리를 할당
		
		System.out.println(p1);
		
		// Person - 필드(나이, 이름, 성별), 메서드(숨쉬기,먹기,자기)
		
		// . <- 연산자임 / 참조연산자
		p1.name = "김박최수연";
		// Stirng name = "김박최수연"
		p1.age = 20;
		p1.gender = "여자";
		
		
		System.out.println(p1.name);
		

	}

}
